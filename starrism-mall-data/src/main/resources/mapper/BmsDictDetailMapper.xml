<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.starrism.mall.data.mapper.BmsDictDetailMapper">
    <resultMap id="DictDetailMapper" type="org.starrism.mall.data.domain.entity.BmsDictDetail">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="dict_category_id" jdbcType="BIGINT" property="dictCategoryId"/>
        <result column="dict_code" jdbcType="VARCHAR" property="dictCode"/>
        <result column="dict_value" jdbcType="VARCHAR" property="dictValue"/>
        <result column="parent_id" jdbcType="BIGINT" property="parentId"/>
        <result column="hierarchical_path" jdbcType="VARCHAR" property="hierarchicalPath"/>
        <result column="sort" jdbcType="INTEGER" property="sort"/>
        <result column="enable_status" jdbcType="SMALLINT" property="enableStatus"/>
        <result column="add_time" jdbcType="TIMESTAMP" property="addTime"/>
        <result column="add_name" jdbcType="VARCHAR" property="addName"/>
        <result column="modify_time" jdbcType="TIMESTAMP" property="modifyTime"/>
        <result column="modify_name" jdbcType="VARCHAR" property="modifyName"/>
    </resultMap>

    <select id="findById" parameterType="long" resultMap="DictDetailMapper">
        select id,
               dict_category_id,
               dict_code,
               dict_value,
               parent_id,
               hierarchical_path,
               sort,
               enable_status,
               add_time,
               add_name,
               modify_time,
               modify_name
        from bms_dict_detail
        where id = #{id,jdbcType=BIGINT}
    </select>

    <select id="findByCategory" parameterType="long" resultMap="DictDetailMapper">
        select id,
               dict_category_id,
               dict_code,
               dict_value,
               parent_id,
               hierarchical_path,
               sort,
               enable_status,
               add_time,
               add_name,
               modify_time,
               modify_name
        from bms_dict_detail
        where dict_category_id = #{categoryId,jdbcType=BIGINT}
          and enable_status = 0
        order by sort;
    </select>

    <select id="findByCodes" resultMap="DictDetailMapper">
        select id,
               dict_category_id,
               dict_code,
               dict_value,
               parent_id,
               hierarchical_path,
               sort,
               enable_status,
               add_time,
               add_name,
               modify_time,
               modify_name
        from bms_dict_detail
        where dict_category_id = #{categoryId,jdbcType=BIGINT}
          and dict_code = #{dictCode,jdbcType=VARCHAR}
          and enable_status = 0
        order by sort;
    </select>
</mapper>